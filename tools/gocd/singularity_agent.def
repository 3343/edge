BootStrap: debootstrap
OSVersion: stretch
MirrorURL: http://ftp.us.debian.org/debian/
Include:

%post
  # install system-level dependencies
  apt-get install -qq -o=Dpkg::Use-Pty=0 -y software-properties-common
  apt-get install -qq -o=Dpkg::Use-Pty=0 -y sudo
  apt-get install -qq -o=Dpkg::Use-Pty=0 -y curl wget unzip
  apt-get install -qq -o=Dpkg::Use-Pty=0 -y gnupg
  apt-get install -qq -o=Dpkg::Use-Pty=0 -y libcurl4-openssl-dev
  apt-get install -qq -o=Dpkg::Use-Pty=0 -y git
  apt-get install -qq -o=Dpkg::Use-Pty=0 -y apt-transport-https

  # install Java 8
  add-apt-repository -y ppa:openjdk-r/ppa > /dev/null
  apt-get -qq update
  apt-get -qq install openjdk-8-jre > /dev/null

  # get server certificate
  mkdir -p /var/go
  openssl s_client -showcerts -connect deb.dial3343.org:8154 </dev/null 2>/dev/null|openssl x509 -outform PEM > /var/go/root-cert.pem

  # install the standalone agent
  wget https://download.gocd.org/binaries/18.9.0-7478/generic/go-agent-18.9.0-7478.zip
  unzip go-agent-18.9.0-7478.zip
  cd go-agent-18.9.0
  mv * /bin
  cd ..

  # clone EDGE for tool script
  git clone https://github.com/3343/edge.git
  cd edge
  git checkout develop

  # install tools
  ./tools/gocd/install_tools.sh

  # create Stampede mountpoints
  mkdir /home1
  mkdir /work
  mkdir /scratch

%runscript
  # run agent with custom git-install paths
  GIT_EXEC_PATH=/usr/lib/git-core GIT_TEMPLATE_DIR=/usr/share/git-core/templates/ AGENT_WORK_DIR=$(pwd) GO_SERVER_URL=https://deb.dial3343.org:8154/go /bin/agent.sh